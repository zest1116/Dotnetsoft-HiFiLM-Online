<div class="modal fade" id="modalUserEntry" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md order-md-1"><h4 class="mb-3">@Resources.ResourceDictionary.UsersManagement_Identity</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">@Resources.ResourceDictionary.UsersManagement_PrincipalName</div>
                        <div class="col-md-10">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <input type="text" />
                                </div>
                                <label class="input-group-text input-group-sm"> @Html.Encode("@")</label>
                                <select class="custom-select custom-select-sm">
                                    @foreach (var domain in ViewData["Domains"] as List<Dotnetsoft.HiFiLM.Graph.Models.Domain>)
                                    {
                                        <option>@domain.Id</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
